  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Changer photo de profil</h4>
      <br>
      
      <form action="/file/ChangeProfile/{{info._id}}" method="POST" enctype="multipart/form-data">
        <div class="file-field input-field">
          <div class="btn">
            <span>Image</span>
            <input type="file" name="fileProfile">
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" placeholder="Choisir sa photo ..." type="text" name="fileProfileName">
          </div>
        </div>    
    </div>
    <div class="modal-footer">
      <button class="modal-close waves-effect waves-green btn-flat" type="submit">Valider</button>
    </div>
    </form>
